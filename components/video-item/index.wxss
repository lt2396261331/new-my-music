/* components/video-item/index.wxss */
.item {
  margin-bottom: 30rpx;
}

.item .albom {
  position: relative;
  border-radius: 10rpx;
}

.albom .img {
  width: 100%;
  border-radius: 5rpx;
}

.info {
  position: absolute;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: 100%;
  bottom: 12rpx;
  font-size: 10rpx;
  color: #fff;
  font-size: 24rpx;
  padding: 0 10rpx;
  box-sizing: border-box;
}

.content {
  margin-top: 6rpx;
  font-size: 26rpx;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  display: -moz-box;
  -moz-line-clamp: 2;
  -moz-box-orient: vertical;
  word-wrap: break-word;
  word-break: break-all;
  white-space: normal;
  overflow: hidden;
}