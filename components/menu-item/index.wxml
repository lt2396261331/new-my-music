<!--components/menu-item/index.wxml-->
<wxs src="../../utils/format.wxs" module="fm"></wxs>

<view class="menu-item" bindtap="handleClickMenu">
  <view class="top">
    <image class="image" src="{{itemData.coverImgUrl}}" mode="widthFix" />
    <view class="play-count">{{fm.formatCount(itemData.playCount)}}</view>
  </view>
  <view class="bottom">{{itemData.name}}</view>
</view>
