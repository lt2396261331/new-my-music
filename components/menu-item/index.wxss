/* components/menu-item/index.wxss */

.menu-item {
  width: 100%;
  display: flex;
  flex-direction: column;
  vertical-align: top;
}

.top {
  position: relative;
  display: flex;
  
  overflow: hidden;
  margin-bottom: 6rpx;
}

.top .image {
  width: 100%;
  border-radius: 12rpx;
  background-size: cover;
}

.play-count {
  position: absolute;
  bottom: 4rpx;
  right: 4rpx;
  color: #fff;
  font-size: 22rpx;
  border-radius: 12rpx;
  padding: 6rpx 10rpx;
  background: rgba(0,0,0,.5);
}

.bottom {
  width: 100%;
  font-size: 26rpx;

  /* 显示两行 */
  white-space: normal;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

