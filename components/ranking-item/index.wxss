/* components/ranking-item/index.wxss */

.ranking {
  display: flex;
  background-color: #eee;
  flex-direction: row;
  justify-content: space-between;
  /* align-items: center; */
  margin-top: 20rpx;
  border-radius: 15rpx;
}

.ranking .left {
  display: flex;
  flex-direction: column;
  padding: 20rpx 16rpx;
  flex: 1;
}

.ranking .left .title {
  font-size: 34rpx;
  margin-bottom: 12rpx;
}

.ranking .left .songs {
  font-size: 24rpx;
}

.ranking .right {
  position: relative;
  display: flex;
}

.ranking .right .count {
  position: absolute;
  bottom: 0;
  right: 0;
  color: #fff;
  font-size: 22rpx;
  border-radius: 12rpx;
  padding: 6rpx 10rpx;
  background: rgba(0,0,0,.5);
} 

.ranking .right .image {
  width: 220rpx;
  height: 220rpx;
  background-size: cover;
}
