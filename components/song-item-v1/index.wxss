/* components/song-item-v1/index.wxss */

.item {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 16rpx 0;
  align-items: center;
}

.item .image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 16rpx;
}

.content {
  flex: 1;
  padding-left: 16rpx;
}

.content .name {
  font-size: 32rpx;
  color: #555;
}

.content .auther {
  margin-top: 16rpx;
  font-size: 24rpx;
  color: #999;
}
